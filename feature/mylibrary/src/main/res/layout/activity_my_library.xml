<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:background="#FFF"
    tools:context=".MyLibraryActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="feature:mylibrary"
        android:textColor="#26A69A"
        android:textSize="30sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginVertical="20dp"
        android:background="#CCC" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Flavor] Resource" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Pluu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="[Flavor] Load Object class getter" /> />

    <TextView
        android:id="@+id/tvStaticTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sample" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="[Flavor] Load class function" />

    <TextView
        android:id="@+id/tvDynamicTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sample" />

</LinearLayout>